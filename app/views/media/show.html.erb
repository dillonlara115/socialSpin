<p id="notice"><%= notice %></p>


<h3><%= @medium.artist %></h3>
<div class="media">
<div class="pull-left">
  <%= image_tag @medium.image_url.to_s, "class" => "media-object", "data-src" => "holder.js/300x200" %>
</div>

<p>
  <b>Artist description:</b>
  <%= @medium.artist_description %>
</p>

<p>
  <b>Album:</b>
  <%= @medium.album %>
</p>

<p>
  <b>Album description:</b>
  <%= @medium.album_description %>
</p>

<p>
  <b>Year:</b>
  <%= @medium.year %>
</p>

<p>
  <h4>Rate Artist :</h4> <%= rating_for @medium, "artist" %>
</p>
</div>