<h1>Listing media</h1>

<table>
  <tr>
    <th>Artist</th>
    <th>Artist description</th>
    <th>Album</th>
    <th>Album description</th>
    <th>Year</th>
    <th>Average rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @media.each do |medium| %>
  <tr>
    <td><%= medium.artist %></td>
    <td><%= medium.artist_description %></td>
    <td><%= medium.album %></td>
    <td><%= medium.album_description %></td>
    <td><%= medium.year %></td>
    <td><%= medium.average_rating %></td>
    <td><%= link_to 'Show', medium %></td>
    <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
    <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

